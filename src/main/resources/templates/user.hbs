{{#partial "content"}}

    <h1>All Employees</h1>
    <br>
    <br>

    <form action="/users" method="post" >
        <div class="form-group">
            <label>Employee Name</label>
            <input type="text" name="employeeName" class="form-control" required>
        </div>
        <div class="form-group">
            <label>DepartmentId</label>
            <input type="text" name="departmentId" class="form-control" required>
        </div>
        <div class="form-group">
            <label>Role</label>
            <input type="text" name="role" class="form-control" required>
        </div>
        <button type="submit" class="button btn-success">Submit</button>
    </form>

    <br>
    <br>

    <table class="table">
        <tr>
            <th scope="col">Employee Name</th>
            <th scope="col">DepartmentId</th>
            <th scope="col">Role</th>


        </tr>
        {{#each departments}}
            <tr>
                <td>{{employeeName}}</td>
                <td>{{departmentId}}</td>
                <td>{{role}}</td>

            </tr>
        {{/each}}
    </table>

{{/partial}}

{{>layout.hbs}}